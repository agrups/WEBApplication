<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginPage">
    <children>
        <SplitPane dividerPositions="0.5" prefHeight="401.0" prefWidth="601.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="signUpBtn" layoutX="88.0" layoutY="170.0" mnemonicParsing="false"
                                onAction="#createUser" prefHeight="59.0" prefWidth="121.0" text="Sign Up"/>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="signInBtn" layoutX="104.0" layoutY="257.0" mnemonicParsing="false"
                                onAction="#validateUser" prefHeight="48.0" prefWidth="102.0" text="Login"/>
                        <Label layoutX="40.0" layoutY="30.0" prefHeight="40.0" prefWidth="208.0" text="login"/>
                        <TextField fx:id="loginField" layoutX="40.0" layoutY="70.0" prefHeight="25.0"
                                   prefWidth="218.0"/>
                        <Label layoutX="40.0" layoutY="121.0" text="password"/>
                        <PasswordField fx:id="pswField" layoutX="40.0" layoutY="145.0" prefHeight="25.0"
                                       prefWidth="218.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
